<?xml version="1.0" encoding="utf-8"?><PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >    <PreferenceCategory android:title="IP  or  Host Name" >        <ListPreference            android:dialogTitle="STBs"            android:entries="@array/STB_Names"            android:entryValues="@array/STB_HostNames"            android:key="hostname"            android:title="STB Name" />        <SwitchPreference            android:defaultValue="true"            android:disableDependentsState="false"            android:key="switch"            android:title="IP or Host Name" />        <EditTextPreference            android:defaultValue="192.168.1.2"            android:dependency="switch"            android:inputType="phone"            android:key="ip"            android:layout="?android:attr/preferenceLayoutChild"            android:title="STB IP" />    </PreferenceCategory>    <PreferenceCategory android:title="Credentials" >        <EditTextPreference            android:defaultValue="root"            android:key="user"            android:title="Username" />        <EditTextPreference            android:key="pass"            android:title="Password" />    </PreferenceCategory></PreferenceScreen>