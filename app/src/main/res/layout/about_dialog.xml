<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/ScrollView1"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".AboutDialog" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<ImageView
			android:layout_width="58dp"
			android:layout_height="58dp"
			android:layout_gravity="center"
			android:layout_marginTop="10dp"
			android:contentDescription="App icon"
			android:src="@drawable/ic_launcherx" />

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:src="@drawable/persian_pros" />

		<TextView
			android:id="@+id/tvPersianGrandeur"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginBottom="10dp"
			android:text="Persian Grandeur"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="4dp"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="4dp"
			android:layout_marginTop="10dp"
			android:orientation="horizontal" >

			<TextView
				android:id="@+id/tvBuildDate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="4.29"
				android:text="Build Date: 2012/11/15"
				android:textAppearance="?android:attr/textAppearanceSmall" />

			<ProgressBar
				android:id="@+id/pgGetVersion"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="invisible" />

			<Button
				android:id="@+id/btnCheckForUpdate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="@string/Check_for_Update"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="@android:color/secondary_text_light" />

		</LinearLayout>

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:layout_marginBottom="4dp"
		    android:layout_marginLeft="4dp"
		    android:layout_marginRight="4dp"
		    android:orientation="horizontal" >

		    <ProgressBar
		        android:id="@+id/pgGetReleaseNotes"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:visibility="invisible" />

		    <Button
		        android:id="@+id/btnReleaseNotes"
		        android:layout_width="130dp"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="@string/ReleaseNotes"
		        android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@android:color/secondary_text_light" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="4dp"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="4dp"
			android:layout_marginTop="10dp"
			android:background="#DDD"
			android:orientation="vertical" >

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="4dp"
				android:text="Designed and Developed by: MohammadAli J (mammadalius)"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="#333" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="4dp"
				android:text="Email: mammadalius@yahoo.com"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="#333" />

			<TextView
				android:layout_width="wrap_content"
